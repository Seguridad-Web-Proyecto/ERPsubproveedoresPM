<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>securityRealm3</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginError.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>ADMINS</role-name>
    </security-role>
    <security-role>
        <role-name>USERS</role-name>
    </security-role>
    <security-role>
        <role-name>COMPRAS</role-name>
    </security-role>
    <security-role>
        <role-name>VENTAS</role-name>
    </security-role>
    <security-role>
        <role-name>RH</role-name>
    </security-role>
    <security-role>
        <role-name>INVENTARIO</role-name>
    </security-role>

    
    
    <security-constraint>
        <display-name>Admin Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected_Admin_Area</web-resource-name>
            <description/>
            <url-pattern>/secured/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <description>ADMINS</description>
            <role-name>ADMINS</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Compras Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected_Compras_Area</web-resource-name>
            <description/>
            <url-pattern>/secured/compras/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <description>COMPRAS</description>
            <role-name>COMPRAS</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Ventas Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected_Ventas_Area</web-resource-name>
            <description/>
            <url-pattern>/secured/ventas/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <description>VENTAS</description>
            <role-name>VENTAS</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Inventario Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected_Inventario_Area</web-resource-name>
            <description/>
            <url-pattern>/secured/inventario/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <description>INVENTARIO</description>
            <role-name>INVENTARIO</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Rh Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected_Rh_Area</web-resource-name>
            <description/>
            <url-pattern>/secured/rh/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <description>RH</description>
            <role-name>RH</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>User Pages</display-name>
        <web-resource-collection>
            <web-resource-name>Protected User Area</web-resource-name>
            <description/>
            <url-pattern>/secured/user/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>POST</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>USERS</description>
            <role-name>USERS</role-name>
        </auth-constraint>
        
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        
    <display-name>Shared Pages</display-name>
    <web-resource-collection>
      <web-resource-name>Protected Area</web-resource-name>
      <description/>
      <url-pattern>/secured/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>USERS</role-name>
      <role-name>ADMINS</role-name>
      <role-name>COMPRAS</role-name>
      <role-name>VENTAS</role-name>
      <role-name>RH</role-name>
      <role-name>INVENTARIO</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Public Area</web-resource-name>
      <url-pattern>/resources</url-pattern>
      <url-pattern>/</url-pattern>
    </web-resource-collection>
  </security-constraint>
    
    <context-param>
	<param-name>primefaces.THEME</param-name>
	<param-value>excite-bike</param-value>
    </context-param>
</web-app>
